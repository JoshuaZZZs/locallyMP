/* pages/list/list.wxss */
.search{
  text-align: center;
}
.search {
  display: flex;
  align-items: center;
  width: 60%;
  margin: 15rpx auto;
  border-radius: 20rpx;
  padding: 7rpx;
  text-align: left;
  padding-left: 25rpx;  
  background: #fff;
}
.search input{
  flex-basis: 90%;
  font-size: 27rpx;
}
.search input .placeholder_text{
  color: #ccc;
  font-size: 27rpx;
}
 .search  .search_icon{
  font-size: 27rpx;
} 
.list{
  background: #fff;
}
.list .shop_items{
  display: flex;
  border-bottom: 1rpx solid #ccc;
  padding: 15rpx;
  justify-content: space-between;
}
.list .shop_items .item_image{
  height: 200rpx;
}
.list .score {
  line-height: 1;
}
.list .score text{
  padding: 3rpx 4rpx;
  border-radius: 48rpx;
  color: #fff;
  font-size: 10px;
  background: red;  
}
.list .shop_items .item_image image{
  width: 200rpx;
  height: 200rpx;
}
.list .shop_items .item_content{
  margin-left: 20rpx;
  flex: 4;
  font-size: 12px;
  color: #000;
}
.list .shop_items .item_content .name{
  font-size: 14px;
  color: #000;
  line-height: 1;
  margin-bottom: 10rpx;  
}
.list .shop_items .item_content{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list .shop_items .item_content>view{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list .shop_items .item_content>view>text{
color: #ccc;
}